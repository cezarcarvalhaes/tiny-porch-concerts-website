{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components": [
        "./src/components/index.ts"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*" : [
        "./src/layouts/*"
      ],
      "@sections": [
        "./src/sections/index.ts"
      ],
      "@sections/*": [
        "./src/sections/*"
      ],
      "@util/*": [
        "./src/util/*"
      ],
      "@content/*" : [
        "./content/*"
      ],
      "@ui/*" : [
        "./src/ui/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "package.json",
    ".eslintrc.js",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
